---
import BaseLayout from "../components/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import { SignIn } from "@clerk/astro/react";
import "../styles/global.css";
---

<BaseLayout 
  title="Sign In"
  description="Sign in to your G.R.A.D.E. account"
>
  <Navigation />
  <main class="mx-auto max-w-5xl p-6 logo-underlay" style={`--logo-url: url('/GR.svg')`}>
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">Sign In</h1>
      <p class="text-gray-600 dark:text-neutral-400">Sign in to your G.R.A.D.E. account to access your profile and personalized features</p>
    </div>

    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <SignIn 
          client:load
          routing="path"
          path="/sign-in"
          signUpUrl="/sign-up"
          afterSignInUrl="/"
        />
      </div>
    </div>
  </main>
</BaseLayout>

