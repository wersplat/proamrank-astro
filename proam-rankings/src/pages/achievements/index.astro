---
import BaseLayout from '../../components/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import AchievementsIsland from '../../components/AchievementsIsland';

// Get query params for filters
const searchParam = Astro.url.searchParams.get('search') || '';
const categoryParam = Astro.url.searchParams.get('category') || '';
const rarityParam = Astro.url.searchParams.get('rarity') || '';
const viewParam = Astro.url.searchParams.get('view') || 'grid';
---

<BaseLayout 
  title="Achievements"
  description="Discover player achievements and milestones in NBA 2K Pro-Am competitive play. Track your progress and unlock badges by reaching milestones across various categories"
>
  <Navigation />
    
    <main class="container mx-auto px-4 py-8">
      {/* Header */}
      <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2 text-white">üèÜ Achievements</h1>
        <p class="text-neutral-400">
          Track your progress and unlock badges by reaching milestones across various categories
        </p>
      </div>

      {/* Achievements Grid/List with Filters */}
      <AchievementsIsland 
        client:load
        searchParam={searchParam}
        categoryParam={categoryParam}
        rarityParam={rarityParam}
        viewParam={viewParam}
      />
    </main>
</BaseLayout>

