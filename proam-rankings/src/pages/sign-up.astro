---
import BaseLayout from "../components/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import { SignUp } from "@clerk/astro/react";
import "../styles/global.css";
---

<BaseLayout 
  title="Sign Up"
  description="Create a new G.R.A.D.E. account"
>
  <Navigation />
  <main class="mx-auto max-w-5xl p-6 logo-underlay" style={`--logo-url: url('/GR.svg')`}>
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">Sign Up</h1>
      <p class="text-gray-600 dark:text-neutral-400">Create a new G.R.A.D.E. account to track your stats and access personalized features</p>
    </div>

    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <SignUp 
          client:load
          routing="path"
          path="/sign-up"
          signInUrl="/sign-in"
          afterSignUpUrl="/"
        />
      </div>
    </div>
  </main>
</BaseLayout>

