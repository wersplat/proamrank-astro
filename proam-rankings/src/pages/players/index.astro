---
import BaseLayout from "../../components/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";
import { supa } from "../../lib/supabase";
import "../../styles/global.css";
import { getRatingTierColor } from "../../lib/ratingUtils";
import { buildFilterQuery, hasActiveFilters } from "../../lib/filterUtils";

const ITEMS_PER_PAGE = 30;
const currentPage = parseInt(Astro.url.searchParams.get('page') || '1', 10);
const offset = (currentPage - 1) * ITEMS_PER_PAGE;

// Get filter parameters
const positionFilter = Astro.url.searchParams.get('position') || 'all';
const tierFilter = Astro.url.searchParams.get('tier') || 'all';
const sortBy = Astro.url.searchParams.get('sort') || 'rating';
const searchQuery = Astro.url.searchParams.get('search') || '';
const view = Astro.url.searchParams.get('view') || 'grid';

// Build query with filters - use player_performance_mart for optimized performance
let query = supa((Astro.locals as any).runtime)
  .from("player_performance_mart")
  .select("*", { count: 'exact' });

if (positionFilter !== 'all') {
  query = query.eq("position", positionFilter as any);
}

if (tierFilter !== 'all') {
  query = query.eq("rating_tier", tierFilter as any);
}

if (searchQuery) {
  query = query.ilike("gamertag", `%${searchQuery}%`);
}

// Get total count
const { count } = await query;

const totalPages = Math.ceil((count || 0) / ITEMS_PER_PAGE);

// Fetch players with pagination and filters from player_performance_mart
let dataQuery = supa((Astro.locals as any).runtime)
  .from("player_performance_mart")
  .select("*");

if (positionFilter !== 'all') {
  dataQuery = dataQuery.eq("position", positionFilter as any);
}

if (tierFilter !== 'all') {
  dataQuery = dataQuery.eq("rating_tier", tierFilter as any);
}

if (searchQuery) {
  dataQuery = dataQuery.ilike("gamertag", `%${searchQuery}%`);
}

// Apply sorting
if (sortBy === 'rating') {
  dataQuery = dataQuery.order("global_rating", { ascending: false });
} else if (sortBy === 'games') {
  dataQuery = dataQuery.order("games_played", { ascending: false });
} else if (sortBy === 'impact') {
  dataQuery = dataQuery.order("avg_points", { ascending: false }); // Use avg_points as impact metric
}

const { data, error } = await dataQuery.range(offset, offset + ITEMS_PER_PAGE - 1);

if (error) console.error(error);
const players = data ?? [];

// Get unique positions for filter
const { data: positionsData } = await supa((Astro.locals as any).runtime)
  .from("player_performance_mart")
  .select("position")
  .not("position", "is", null);

const uniquePositions = [...new Set((positionsData ?? []).map((p: any) => p.position))].filter(Boolean).sort();

// Get unique rating tiers for filter
const { data: tiersData } = await supa((Astro.locals as any).runtime)
  .from("player_performance_mart")
  .select("rating_tier")
  .not("rating_tier", "is", null);

const allTiers = ['S+', 'S', 'A', 'B', 'C', 'D', 'Unranked'];
const availableTiers = [...new Set((tiersData ?? []).map((t: any) => t.rating_tier))].filter(Boolean);
const uniqueTiers = allTiers.filter(tier => availableTiers.includes(tier));

// Generate page numbers
function getPageNumbers(current: number, total: number): number[] {
  const pages: number[] = [];
  if (total <= 7) {
    for (let i = 1; i <= total; i++) pages.push(i);
  } else if (current <= 4) {
    for (let i = 1; i <= 7; i++) pages.push(i);
  } else if (current >= total - 3) {
    for (let i = total - 6; i <= total; i++) pages.push(i);
  } else {
    for (let i = current - 3; i <= current + 3; i++) pages.push(i);
  }
  return pages;
}

const pageNumbers = getPageNumbers(currentPage, totalPages);

// Build filter query for pagination links
const filterQuery = buildFilterQuery({
  position: positionFilter,
  tier: tierFilter,
  sort: sortBy,
  search: searchQuery,
  view: view
});

// Check if filters are active
const filtersActive = hasActiveFilters(
  { position: positionFilter, tier: tierFilter, sort: sortBy, search: searchQuery },
  { position: 'all', tier: 'all', sort: 'rating', search: '' }
);
---

<BaseLayout 
  title="Players"
  description="Explore player statistics, ratings, and performance metrics for NBA 2K Pro-Am competitors. Search and filter players by position, tier, and rating"
>
  <Navigation />
    <main class="mx-auto max-w-6xl p-6 logo-underlay" style={`--logo-url: url('/GR.svg')`}>
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Players</h1>
          <div class="text-sm text-gray-600 dark:text-neutral-400">
            Page {currentPage} of {totalPages} • {count || 0} total
          </div>
        </div>

        <!-- Filters -->
        <div class="flex flex-wrap gap-3 mb-4">
          <div class="flex items-center gap-2">
            <label class="text-sm text-gray-700 dark:text-neutral-400">Search:</label>
            <input
              type="text"
              id="searchInput"
              placeholder="Player name..."
              value={searchQuery}
              class="px-3 py-1 rounded bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 text-gray-900 dark:text-white text-sm w-48"
              onkeydown="if (event.key === 'Enter') window.location.href = updateFilter('search', this.value)"
            />
          </div>

          <div class="flex items-center gap-2">
            <label class="text-sm text-gray-700 dark:text-neutral-400">Position:</label>
            <select 
              id="positionFilter"
              class="px-3 py-1 rounded bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 text-gray-900 dark:text-white text-sm"
              onchange="window.location.href = updateFilter('position', this.value)"
            >
              <option value="all" selected={positionFilter === 'all'}>All Positions</option>
              {uniquePositions.map((position: string) => (
                <option value={position} selected={positionFilter === position}>{position}</option>
              ))}
            </select>
          </div>

          <div class="flex items-center gap-2">
            <label class="text-sm text-gray-700 dark:text-neutral-400">Tier:</label>
            <select 
              id="tierFilter"
              class="px-3 py-1 rounded bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 text-gray-900 dark:text-white text-sm"
              onchange="window.location.href = updateFilter('tier', this.value)"
            >
              <option value="all" selected={tierFilter === 'all'}>All Tiers</option>
              {uniqueTiers.map((tier: string) => (
                <option value={tier} selected={tierFilter === tier}>{tier}</option>
              ))}
            </select>
          </div>

          <div class="flex items-center gap-2">
            <label class="text-sm text-gray-700 dark:text-neutral-400">Sort:</label>
            <select 
              id="sortFilter"
              class="px-3 py-1 rounded bg-white dark:bg-neutral-800 border border-gray-300 dark:border-neutral-700 text-gray-900 dark:text-white text-sm"
              onchange="window.location.href = updateFilter('sort', this.value)"
            >
              <option value="rating" selected={sortBy === 'rating'}>Global Rating</option>
              <option value="games" selected={sortBy === 'games'}>Games Played</option>
              <option value="impact" selected={sortBy === 'impact'}>Game Impact</option>
            </select>
          </div>

          {filtersActive && (
            <a 
              href={view !== 'grid' ? `/players?view=${view}` : '/players'}
              class="px-3 py-1 rounded bg-gray-200 dark:bg-neutral-800 hover:bg-gray-300 dark:hover:bg-neutral-700 transition text-sm text-gray-900 dark:text-white"
            >
              Clear Filters
            </a>
          )}

          <div class="flex items-center gap-1 ml-auto">
            <button
              onclick={`window.location.href = updateFilter('view', 'grid')`}
              class={`p-1.5 rounded transition ${view === 'grid' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' : 'text-gray-500 hover:bg-gray-100 dark:text-neutral-400 dark:hover:bg-neutral-800'}`}
              title="Grid View"
              aria-label="Grid View"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
            </button>
            <button
              onclick={`window.location.href = updateFilter('view', 'list')`}
              class={`p-1.5 rounded transition ${view === 'list' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400' : 'text-gray-500 hover:bg-gray-100 dark:text-neutral-400 dark:hover:bg-neutral-800'}`}
              title="List View"
              aria-label="List View"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3.01" y2="6"></line><line x1="3" y1="12" x2="3.01" y2="12"></line><line x1="3" y1="18" x2="3.01" y2="18"></line></svg>
            </button>
          </div>
        </div>
      </div>

      <script is:inline>
        function updateFilter(param, value) {
          const url = new URL(window.location.href);
          if (value === 'all' || (param === 'sort' && value === 'rating') || (param === 'search' && value === '') || (param === 'view' && value === 'grid')) {
            url.searchParams.delete(param);
          } else {
            url.searchParams.set(param, value);
          }
          if (param !== 'view') {
             url.searchParams.delete('page'); // Reset to page 1 when filtering, but not when switching view
          }
          return url.toString();
        }
      </script>

      <!-- Players List/Grid -->
      {view === 'grid' ? (
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {players.map((player) => (
            <a 
              href={`/players/${player.player_id}`}
              class="block rounded-lg border border-gray-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 p-4 hover:border-blue-500 dark:hover:border-blue-500 transition"
            >
              <div class="mb-3">
                <div class="flex items-start justify-between gap-2 mb-1">
                  <h2 class="font-bold text-lg flex-1 text-gray-900 dark:text-white">{player.gamertag}</h2>
                  {player.rating_tier && (
                    <span class={`px-2 py-0.5 rounded text-xs font-bold border ${getRatingTierColor(player.rating_tier)}`}>
                      {player.rating_tier}
                    </span>
                  )}
                </div>
                <p class="text-sm text-gray-600 dark:text-neutral-400">{player.position || 'Unknown'}</p>
              </div>
              
              <dl class="grid grid-cols-3 gap-2 text-sm mb-3">
                <div>
                  <dt class="text-gray-600 dark:text-neutral-400 text-xs">Rating</dt>
                  <dd class="font-semibold text-gray-900 dark:text-white">{player.global_rating?.toFixed(1) ?? '-'}</dd>
                </div>
                <div>
                  <dt class="text-gray-600 dark:text-neutral-400 text-xs">Games</dt>
                  <dd class="font-semibold text-patriot-blue-600 dark:text-blue-400">{player.games_played ?? 0}</dd>
                </div>
                <div>
                  <dt class="text-gray-600 dark:text-neutral-400 text-xs">PPG</dt>
                  <dd class="font-semibold text-green-600 dark:text-green-400">{player.avg_points?.toFixed(1) ?? '-'}</dd>
                </div>
              </dl>
            </a>
          ))}
        </div>
      ) : (
        <div class="overflow-x-auto rounded-lg border border-gray-200 dark:border-neutral-800 bg-white dark:bg-neutral-900">
          <table class="w-full text-sm text-left">
            <thead class="bg-gray-50 dark:bg-neutral-800/50 text-gray-600 dark:text-neutral-400 font-medium border-b border-gray-200 dark:border-neutral-800">
              <tr>
                <th class="px-4 py-3">Player</th>
                <th class="px-4 py-3">Position</th>
                <th class="px-4 py-3 text-right">Rating</th>
                <th class="px-4 py-3 text-right">Games</th>
                <th class="px-4 py-3 text-right">PPG</th>
                <th class="px-4 py-3 text-right">Link</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-neutral-800">
              {players.map((player) => (
                <tr class="hover:bg-gray-50 dark:hover:bg-neutral-800/50 transition">
                  <td class="px-4 py-3">
                    <div class="flex items-center gap-2">
                      <a 
                        href={`/players/${player.player_id}`}
                        class="font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 hover:underline transition"
                      >
                        {player.gamertag}
                      </a>
                      {player.rating_tier && (
                        <span class={`px-1.5 py-0.5 rounded text-[10px] font-bold border ${getRatingTierColor(player.rating_tier)}`}>
                          {player.rating_tier}
                        </span>
                      )}
                    </div>
                  </td>
                  <td class="px-4 py-3 text-gray-600 dark:text-neutral-400">
                    {player.position || '-'}
                  </td>
                  <td class="px-4 py-3 text-right font-semibold text-gray-900 dark:text-white">
                    {player.global_rating?.toFixed(1) ?? '-'}
                  </td>
                  <td class="px-4 py-3 text-right font-semibold text-patriot-blue-600 dark:text-blue-400">
                    {player.games_played ?? 0}
                  </td>
                  <td class="px-4 py-3 text-right font-semibold text-green-600 dark:text-green-400">
                    {player.avg_points?.toFixed(1) ?? '-'}
                  </td>
                  <td class="px-4 py-3 text-right">
                    <a 
                      href={`/players/${player.player_id}`}
                      class="text-blue-600 dark:text-blue-400 hover:underline"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}

      {players.length === 0 && (
        <div class="text-center py-12 text-gray-600 dark:text-neutral-400">
          No players found.
        </div>
      )}

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="mt-8 flex items-center justify-center gap-2">
          {currentPage > 1 ? (
            <a 
              href={`/players?page=${currentPage - 1}${filterQuery}`}
              class="px-4 py-2 rounded bg-gray-200 dark:bg-neutral-800 hover:bg-gray-300 dark:hover:bg-neutral-700 transition text-gray-900 dark:text-white"
            >
              ← Previous
            </a>
          ) : (
            <span class="px-4 py-2 rounded bg-gray-100 dark:bg-neutral-900 text-gray-400 dark:text-neutral-600 cursor-not-allowed">
              ← Previous
            </span>
          )}

          <div class="flex gap-1">
            {pageNumbers.map((pageNum: number) => (
              <a
                href={`/players?page=${pageNum}${filterQuery}`}
                class={`px-3 py-2 rounded transition ${
                  pageNum === currentPage
                    ? 'bg-blue-600 text-white font-semibold'
                    : 'bg-gray-200 dark:bg-neutral-800 hover:bg-gray-300 dark:hover:bg-neutral-700 text-gray-900 dark:text-white'
                }`}
              >
                {pageNum}
              </a>
            ))}
          </div>

          {currentPage < totalPages ? (
            <a 
              href={`/players?page=${currentPage + 1}${filterQuery}`}
              class="px-4 py-2 rounded bg-gray-200 dark:bg-neutral-800 hover:bg-gray-300 dark:hover:bg-neutral-700 transition text-gray-900 dark:text-white"
            >
              Next →
            </a>
          ) : (
            <span class="px-4 py-2 rounded bg-gray-100 dark:bg-neutral-900 text-gray-400 dark:text-neutral-600 cursor-not-allowed">
              Next →
            </span>
          )}
        </div>
      )}
    </main>
</BaseLayout>

