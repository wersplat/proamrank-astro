---
import BaseLayout from "../components/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import ClerkFDWTest from "../components/ClerkFDWTest";
import "../styles/global.css";
---

<BaseLayout 
  title="Clerk FDW Test"
  description="Test the Clerk Foreign Data Wrapper integration with Supabase"
>
  <Navigation />
  <main class="mx-auto max-w-5xl p-6 logo-underlay" style={`--logo-url: url('/GR.svg')`}>
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">Clerk FDW Test</h1>
      <p class="text-gray-600 dark:text-neutral-400">Test the integration between Clerk authentication and Supabase Foreign Data Wrapper</p>
    </div>

    <div class="max-w-2xl mx-auto">
      <ClerkFDWTest client:load />
    </div>
  </main>
</BaseLayout>

